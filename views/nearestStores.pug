doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/nearestStores.css')
        link(rel='stylesheet', href='https://unpkg.com/leaflet@1.6.0/dist/leaflet.css',
            integrity='sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==',
            crossorigin=)
        script(src = 'https://unpkg.com/leaflet@1.6.0/dist/leaflet.js',
            integrity='sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew==',
            crossorigin='')

block content
    div#heading
        h1 Stores closest to #{postcode}
    div#map
        div#map_canvas(style="width:100%; height:400px")
        script.
            var map_closest = L.map('map_canvas').setView([p_lat, p_long], 13);
            L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
                attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                maxZoom: 18,
                id: 'mapbox/streets-v11',
                tileSize: 512,
                zoomOffset: -1,
                accessToken: MAPBOX_KEY
             }).addTo(map_closest);

            var i;
            for (i=0; i<closest_stores.length; i++) {
                var lat = closest_stores[i].lat;
                var long = closest_stores[i].long;
                var marker = L.marker([lat, long]).addTo(map_closest);
                var id = closest_stores[i].id;
                var name = closest_stores[i].lat.name;
                marker.bindPopup(name + "<br><a href='/stores/' + id>More Info</a>").openPopup();
            }

    div#store_list
        h3 List of stores closest to #{postcode}
        each store in closest_stores
            div(class="store-details")
                a(class="store-link" href="/stores/" + store.id) #{store.name}
                p #{store.address}
                - var formatted_rating = store.rating.toFixed(2);
                p Rating: #{formatted_rating}%
                br
